        }
      }
    }
  ],

  "defaults": {
    "unknownDevicePolicy": {
      "grid": { "columns": 1, "rows": { "shim": 1, "mem": 1, "aie": 4 } },
      "hostInterface": { "shimCapableColumns": [0], "virtualShimPolicy": { "enabled": false } }
    }
  }
